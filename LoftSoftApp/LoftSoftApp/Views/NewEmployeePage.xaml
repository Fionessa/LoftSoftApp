<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoftSoftApp.Views.NewEmployeePage"
             Title="New Employee">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <!--<ContentPage.Content>-->
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name" FontSize="Medium" />
            <Entry Text="{Binding Employee.Name}" FontSize="Small" />
            <Label Text="Titel" FontSize="Medium" />
            <Entry Text="{Binding Employee.Title}" FontSize="Small" Margin="0" />
            <Label Text="Bildpfad" FontSize="Medium" />
            <Entry Text="{Binding Employee.PicName}" FontSize="Small" Margin="0" />
            <Label Text="Beschreibung" FontSize="Medium" />
            <Entry Text="{Binding Employee.Description}" FontSize="Small" Margin="0" />

        </StackLayout>
    <!--</ContentPage.Content>-->
</ContentPage>
